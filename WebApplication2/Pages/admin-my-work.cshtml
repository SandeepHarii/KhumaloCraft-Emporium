@page
@model KhumaloCraft2.Pages.AdminMyWorkModel
@{
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <h1>@ViewData["Title"]</h1>

        <h1>My Work</h1>
        <hr size="5px">
        <br />

        <table>
            <thead>

                <tr>

                    <th>Product ID</th>
                    <th>Product Name</th>
                    <th>Product Description</th>
                    <th>Product Category</th>
                    <th>Product Availability</th>
                    <th>Product Price</th>
                    <th>Action</th>

                </tr>
            </thead>

            <tbody>
                @foreach (var product in Model.ListProducts)
                {
                    <tr>
                        <td class="product-id-cell">@product.ProductID</td>
                        <td>@product.ProductName</td>
                        <td>@product.ProductDescription</td>
                        <td>@product.ProductCategory</td>
                        <td>@product.ProductAvailability pcs</td>
                        <td>R @product.ProductPrice</td>
                        <td>

                        <a class="btn btn-primary btn-sm" href="/admin-edit-products?id=@product.ProductID&productName=@product.ProductName&productDescription=@product.ProductDescription&productCategory=@product.ProductCategory&productAvailability=@product.ProductAvailability&productPrice=@(product.ProductPrice.ToString().Replace(',', '.'))"><i class="fa fa-pencil" aria-hidden="true"></i></a>


                            <p></p>
                        <a class="btn btn-danger btn-sm" href="/admin-delete-products?id=@product.ProductID"><i class="fa fa-times" aria-hidden="true"></i></a>

                        </td>
                    </tr>
                }
            </tbody>

        </table>

        <section id="footer">
            <hr>
            <div class="icons">
                <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
                <p>
                    <a href="#" class="fa fa-phone"></a>&nbsp;&nbsp;
                    <a href="#" class="fa fa-instagram"></a>&nbsp;&nbsp;
                    <a href="#" class="fa fa-whatsapp"></a>&nbsp;&nbsp;
                    <a href="#" class="fa fa-envelope"></a>&nbsp;&nbsp;
                </p>
                <p>© 2024 KhumaloCraft | All Rights Reserved | Developed By: Sandeep Hari</p>
            </div>

            <hr>
        </section>

</body>

</html>
