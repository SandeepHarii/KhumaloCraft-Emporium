@using Microsoft.AspNetCore.Identity
@using KhumaloCraft2.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@functions {
    public async Task<ApplicationUser> GetCurrentUserAsync()
    {
        return await UserManager.GetUserAsync(User);
    }
}

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        var user = await GetCurrentUserAsync();

        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">Hi
                @user.FirstName
            </a>
            <ul class="dropdown-menu">
                <li><a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index">Profile</a></li>
                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item" asp-area="Identity" asp-page="/Account/Logout">Logout</a></li>
                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item"  asp-page="/view-previous-orders">View Previous Orders</a></li>
                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item" asp-page="/Cart">View Cart</a></li>
            </ul>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>
